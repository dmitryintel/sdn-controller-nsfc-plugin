            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.directory.studio</groupId>
            <artifactId>org.apache.commons.lang</artifactId>
            <version>2.6</version>
        </dependency>
        <!-- Declarative Services is used to publish the service at runtime -->
        <dependency>
            <groupId>org.apache.felix</groupId>
